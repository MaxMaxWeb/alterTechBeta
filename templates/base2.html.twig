{% if appId is defined %}
    <script>
    let url = new URL('{{ mercure_publish_url }}');
    let list = document.getElementById('listRep');

    url.searchParams.append('topic', 'http://localhost:8000/wtccandid/');
    const eventSource = new EventSource(url, {withCredentials: true});


    eventSource.onmessage = (evt) => {

        const data = JSON.parse(evt.data);

        if (!data) {
            return;
        }
        let newRow = document.createElement('tr');
        list.appendChild(newRow);
        let audio = new Audio('assets/sound/swiftly.mp3')

        for (let i=0; i <= data.length - 1; i++){
            if (i < 2){

                let td = document.createElement('td');
                td.innerText = data[i];
                newRow.appendChild(td);



            } else {
                let td = document.createElement('td');
                let form = document.createElement('form')
                let btn = document.createElement('button')
                let i = document.createElement('i')
                form.setAttribute('method', 'post')
                form.setAttribute('action', '/markAsRead')
                btn.setAttribute('class', 'btn btn-light')
                btn.setAttribute('type', 'submit')
                btn.setAttribute('name', 'id')
                btn.setAttribute('value', data[i])
                i.setAttribute('class', 'fas fa-eye')

                newRow.appendChild(td);
                td.appendChild(form);
                form.appendChild(btn);
                btn.appendChild(i);

            }
        }


            audio.play();


    }
    </script>
{% endif %}

